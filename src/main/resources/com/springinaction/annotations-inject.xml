<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <bean id="guitar" class="com.springinaction.annotations.inject.Guitar"/>
    <bean id="saxophone" class="com.springinaction.annotations.inject.Saxophone"/>
    <bean id="instrumentalist" class="com.springinaction.annotations.inject.Instrumentalist"/>
</beans>